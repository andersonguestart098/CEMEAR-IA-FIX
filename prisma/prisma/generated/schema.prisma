generator client {
  provider = "prisma-client-py"
  output   = "prisma/generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Feedback {
  id                     Int      @id @default(autoincrement())
  question               String
  answer                 String
  feedback               String
  acerto                 Boolean?
  usada_para_treinamento Boolean  @default(false)
  timestamp              DateTime @default(now())
}

model KnowledgeBase {
  id        Int      @id @default(autoincrement())
  origem    String
  conteudo  String
  timestamp DateTime @default(now())
}
